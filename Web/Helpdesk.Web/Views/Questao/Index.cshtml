@model Helpdesk.Web.Models.QuestaoModel.QuestaoIndexModel

@if (ViewBag.MensagemErro != null)
{
    <div class="alert alert-danger">
        @ViewBag.MensagemErro
    </div>
}

@if (ViewBag.MensagemSucesso != null)
{
    <div class="alert alert-success">
        @ViewBag.MensagemSucesso
    </div>
}

@using (Html.BeginForm("Pesquisar", "Questao", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="form-group">
        <div class="col-lg-12">
            <h5>Assunto:</h5>
            @Html.TextBoxFor(o => o.Assunto, new { @class = "form-control" })
            <h5>Informe seu problema:</h5>            
            @Html.TextAreaFor(o => o.Problema, new { @class = "form-control", rows = "4" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-lg-6 col-offset-2">
            <button class="btn btn-primary">Enviar</button>
            <button class="btn btn-default">Limpar Campo</button>
        </div>
    </div>
}

@if (Model.Respostas != null && Model.Respostas.Count > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Resposta</th>
                <th style="width: 155px">*</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var resposta in Model.Respostas)
            {
                <tr>
                    <td style="line-height : 38px">@resposta.Texto</td>

                    <td style="line-height : 38px; width: 155px; white-space: nowrap">
                        <button class="btn btn-primary">Sim</button>
                        <button class="btn btn-default">Não</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
    
