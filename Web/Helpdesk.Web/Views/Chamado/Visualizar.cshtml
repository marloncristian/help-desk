@model Helpdesk.Web.Models.ChamadoModels.ChamadoModel

@if (ViewBag.MensagemErro != null)
{
    <div class="alert alert-danger">
        @ViewBag.MensagemErro
    </div>
}

@if (ViewBag.MensagemSucesso != null)
{
    <div class="alert alert-success">
        @ViewBag.MensagemSucesso
    </div>
}

@using (Html.BeginForm("Solucionar", "Chamado", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.HiddenFor(o => o.Codigo)
    
    <div class="form-group">
        <div class="col-lg-12">
            <h5 style="text-align : right">Aberto em: @Model.Abertura.ToLongDateString()</h5>
            <h5 style="text-align : right">Status: @Model.Status</h5>
            <h4>Assunto:</h4>
            <h5>@Model.Assunto</h5>
            <h4>Problema:</h4>
            <h5>@Model.Problema</h5>        

            <h4>Solução:</h4>      
            @Html.TextAreaFor(o => o.Solucao, new { @class = "form-control", rows = "4" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-lg-6 col-offset-2">
            <button class="btn btn-primary">Registrar Solução</button>
            <button class="btn btn-default">Limpar Campo</button>
        </div>
    </div>
}